<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Itemname</th>
      <th>Calories</th>
      <th>Totalfat</th>
      <th>Sodium</th>
      <th>Totalcarb</th>
      <th>Protein</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.itemName %></td>
        <td><%= item.calories %></td>
        <td><%= item.totalFat %></td>
        <td><%= item.sodium %></td>
        <td><%= item.totalCarb %></td>
        <td><%= item.protein %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

