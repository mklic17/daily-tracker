<br><br>
<p id="notice"><%= notice %></p>

<div class="subHeading">

  <div>
    <h2>Activity Tracker</h2>
    <% date = Time.new %>
    <h1><%= date.month.to_s + "/" + date.day.to_s + "/" + date.year.to_s %></h1>
  </div>
  <%= link_to"+ Add Excercies", new_activity_path  %>
</div>


<div class="tableDiv">
<table>
  <thead>
    <tr>
      <th>Excercise</th>
      <th>Calories burned</th>
      <th>Duration</th>
      <th>Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.excercise %></td>
        <td><%= activity.calories_burned %></td>
        <td><%= activity.duration.hour %> hours <%= activity.duration.min %> minutes</td>
        <td><%= activity.date %></td>

        <td><%= link_to 'Edit', edit_activity_path(activity) %>
        <%= link_to 'Destroy', activity, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
